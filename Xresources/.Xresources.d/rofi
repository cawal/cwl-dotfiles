! ROFI X Resources

! UI THEME ---------------------------------------------------------------
! Window opacity
rofi.opacity:                        95 
! Window width
rofi.width:                          50
! Number of lines
rofi.lines:                          5
! Number of columns
rofi.columns:                        1
! Font to use
rofi.font:                           Annonymous Pro 12

! Foreground color
rofi.fg:                             #000000
! Background color
rofi.bg:                             #DDDDDD

! Foreground color for highlighted row
rofi.hlfg:                           #DDDDDD
! Background color for highlighted row
rofi.hlbg:                           #000000

! Foreground color for active row
rofi.fg-active:                      #FF4F00
! Background color for active row
rofi.bg-active:                      #DDDDDD

! Foreground color for highlighted active row
rofi.hlfg-active:                    #F7941E
! Background color for highlighted active row
rofi.hlbg-active:                    #000000


! Foreground color for urgent row
